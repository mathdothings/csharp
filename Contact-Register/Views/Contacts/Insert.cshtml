@model ContactModel
@{
  ViewData["Title"] = "New Contact";
}

<h2 class="text-center">Add new contact</h2>

<form asp-controller="Contacts" asp-action="Insert" method="post">
  
  <div class="form-group mb-2">
    <label for="new-contact-name">Name <span class="text-danger">*</span></label>
    <input asp-for="Name" type="text" class="form-control" id="new-contact-name" aria-describedby="name-help"
      placeholder="Name" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Name)</small>
  </div>
  <div class="form-group mb-2">
    <label for="new-contact-email">Email address <span class="text-danger">*</span></label>
    <input asp-for="Email" type="email" class="form-control" id="new-contact-email" aria-describedby="email-help" placeholder="Email" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Email)</small>
    <small id="email-help" class="form-text text-muted" style="font-size: 0.65rem;">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group mb-2">
    <label for="new-contact-smartphone">Smartphone <span class="text-danger">*</span></label>
    <input asp-for="Smartphone" type="tel" class="form-control" id="new-contact-smartphone" aria-describedby="smartphone-help" placeholder="Smartphone" pattern="[0-9]{2}[0-9]{2}[0-9]{9}" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Smartphone)</small>
    <small class="text-muted" style="font-size: 0.65rem;">Fromat: XXDDNNNNNNNNN</small> <br>
    <small class="text-muted" style="font-size: 0.65rem;">XX: Country Code -</small>
    <small class="text-muted" style="font-size: 0.65rem;">DD: State Code -</small>
    <small class="text-muted" style="font-size: 0.65rem;">NNNNNNNNN: Smartphone Number</small>
  </div>

  <button type="submit" class="btn btn-outline-success d-flex gap-1" id="new-contact-button"><p class="d-inline-block mb-0"><i class="bi bi-check-circle"></i></p></button>
</form>