@{
  ViewData["Title"] = "List of Contacts";
}

<div>
  @* button to insert a new contact *@
  <a
    role="button"
    class="btn btn-outline-primary"
    asp-controller="Contacts"
    asp-action="Insert"
    ><i class="bi bi-person-add"></i
  ></a>
</div>

<h1 class="display-4">Contacts List</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Smartphone</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr class="align-middle">
      <th scope="row">1</th>
      <td>Mark</td>
      <td>mark@email.com</td>
      <td>+55 081999999999</td>
      <td>
        <div
          class="btn-group gap-2"
          role="group"
          aria-label="edit and delete contact list button group"
        >
          <a
            role="button"
            class="btn btn-warning rounded d-flex gap-1"
            asp-controller="Contacts"
            asp-action="Update"
            ><i class="bi bi-pencil d-inline-block"></i
          ></a>
          <a
            role="button"
            class="btn btn-danger rounded d-flex gap-1 text-black"
            asp-controller="Contacts"
            asp-action="Delete"
            ><i class="bi bi-trash3"></i
          ></a>
        </div>
      </td>
    </tr>
