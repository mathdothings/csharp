@{
  ViewData["Title"] = "Erase Contact";
}

<div
  class="d-flex flex-column align-item-center justify-content-center text-center"
>
  <h3 class="d-inline-block">
    Do you really want to erase <span class="text-primary">Contact-Name</span>?
  </h3>

  <div
    class="gap-1"
    role="group"
    aria-label="Confirm contact erase group buttons"
  >
    <a role="button" class="btn btn-danger rounded" asp-controller="Contacts" asp-action="Index">Decline</a>
    <a role="button" class="btn btn-success rounded">Confirm</a>
  </div>
</div>

