@model ContactModel
@{
  ViewData["Title"] = "Edit Contact";
}

<h2 class="text-center">Edit contact</h2>

<form asp-controller="Users" asp-action="Update" method="post">

  <div class="form-group mb-2">
    <label for="new-user-name">Name <span class="text-danger">*</span></label>
    <input asp-for="Name" type="text" class="form-control" id="new-user-name" aria-describedby="name-help" placeholder="Name" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Name)</small>
  </div>
  <div class="form-group mb-2">
    <label for="new-user-email">Email address <span class="text-danger">*</span></label>
    <input asp-for="Email" type="email" class="form-control" id="new-user-email" aria-describedby="email-help" placeholder="Email" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Email)</small>
    <small id="email-help" class="form-text text-muted" style="font-size: 0.65rem;">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group mb-2">
    
  </div>

  <button type="submit" class="btn btn-outline-success d-flex gap-1"><p class="d-inline-block mb-0"><i class="bi bi-check-circle"></i></p></button>
</form>