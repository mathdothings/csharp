@using Contact_Register.Enums;
@model UserModel
@{
  ViewData["Title"] = "New Contact";
}

<h2 class="text-center">Add new user</h2>

<form asp-controller="Users" asp-action="Insert" method="post">

  <div class="form-group mb-2">
    <label for="new-user-name">Name <span class="text-danger">*</span></label>
    <input asp-for="Name" type="text" class="form-control" id="new-user-name" aria-describedby="name-help"
      placeholder="Name" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Name)</small>
  </div>

  <div class="form-group mb-2">
    <label for="new-user-login">Login <span class="text-danger">*</span></label>
    <input asp-for="Login" type="text" class="form-control" id="new-user-login" aria-describedby="email-help"
      placeholder="Login" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Login)</small>
  </div>

  <div class="form-group mb-2">
    <label for="new-user-email">Email address <span class="text-danger">*</span></label>
    <input asp-for="Email" type="email" class="form-control" id="new-user-email" aria-describedby="email-help"
      placeholder="Email" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Email)</small>
    <small id="email-help" class="form-text text-muted" style="font-size: 0.65rem;">We'll never share your email with
      anyone else.</small>
  </div>

  <div class="form-group mb-2">
    <label for="new-user-profile">Profile <span class="text-danger">*</span></label>
    <select asp-for="Profile" class="form-control" id="new-user-profile" placeholder="Role" required>
      @foreach (var role in Enum.GetValues<Profile>().Reverse())
      {
        <option value="@role">@role</option>
      }
    </select>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Profile)</small>
  </div>

  <div class="form-group mb-2">
    <label for="new-user-password">Password <span class="text-danger">*</span></label>
    <input asp-for="Password" type="password" class="form-control" id="new-user-password" aria-describedby="email-help"
      placeholder="Type your password" required>
    <small class="text-danger">@Html.ValidationMessageFor(x => x.Password)</small>
  </div>

  <button type="submit" class="btn btn-outline-success d-flex gap-1" id="new-user-button">
    <p class="d-inline-block mb-0"><i class="bi bi-check-circle"></i></p>
  </button>
</form>